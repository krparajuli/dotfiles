[user]
	name = Kalyan Parajuli
	email = kalyanranjanp@gmail.com

[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[color]
	ui = auto

[merge]
	tool = vim # vimdiff
	conflictstyle = diff3
	prompt = false

[alias]
	graph = log --all --graph --pretty=format:"%C(auto_%h%C(auto)%d %s %C(dim white)(%aN, %ar)"
	graph2 = log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
	# Print brnaches by last used
	wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[init]
	defaultBranch = main
